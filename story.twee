tw-story {
    font-family: "Courier New", Courier, monospace;
    background-color: #0e0e0e;  /* Near-black for a stark contrast */
    color: #d4d4d4; /* Light grey for a faded print look */
    line-height: 1.8;
    letter-spacing: 0.05em;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5); /* Slight shadow for depth */
}

/* Links (choices) - Bold blue with yellow hover */
tw-link {
    color: #0077FF;  /* Bright Ukrainian blue */
    font-weight: bold;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all 0.2s ease-in-out;
}

tw-link:hover {
    color: #FFD700;  /* Ukrainian yellow */
    border-bottom: 2px solid #FFD700; /* Adds emphasis */
}

/* Passage box - Rough, military paper feel */
tw-passage {
    max-width: 100%;
    width: 100%; /* Fixed width */
    height: 80vh; /* Fixed height - adjust as needed */
    margin: 0;
    padding: 20px;
    background: rgba(20, 20, 20, 0.85);
    border: 3px solid #555;
    border-radius: 5px;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.8);
    
    /* Add these properties for scrolling */
    overflow-y: auto; /* Enables vertical scrolling */
    overflow-x: hidden; /* Prevents horizontal scrolling */
    
    /* Optional: Custom scrollbar styling */
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: #555 #1a1a1a; /* Firefox */
}


