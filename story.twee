/* Add a subtle noise effect to the background */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://www.transparenttextures.com/patterns/noisy-grid.png'); /* Adds a grainy, rough feel */
    opacity: 1;
    z-index: -1;
}
